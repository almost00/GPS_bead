<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"

    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.pbarn.gps_bead.SettingsChange_Activity"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Felhasználónév"
        android:id="@+id/textViewSettingsChangeFelhasznalonev"
        android:allowUndo="false"
        android:autoText="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Módosítás"
        android:id="@+id/buttonSettingsChangeFelhasznalonevModositas"
        android:onClick="FelhasznalonevModositasOnClick" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Email"
        android:id="@+id/textViewSettingsChangeEmail"
        android:allowUndo="false"
        android:autoText="false" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageViewSettingsChangeKep"
        android:background="#f3e5e5"
        android:clickable="true"
        android:onClick="settings_change_Kepcsere"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/Kép" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Képcsere"
        android:id="@+id/buttonSettingsChangeKepModositas"
        android:onClick="settings_change_Kepcsere"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Jelszó"
        android:id="@+id/textViewSettingsChangeJelszo"
        android:allowUndo="false"
        android:autoText="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/JelszóMódosítás"
        android:id="@+id/buttonJelszoModositas"
        android:onClick="JelszoModositasOnClick"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Vissza"
        android:id="@+id/buttonVisszaMainActivity"
        android:onClick="VisszaSettingsActivityOnClick"
        />

</LinearLayout>
