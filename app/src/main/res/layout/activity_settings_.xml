<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Settings_Activity"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Telefon azonosító: "
        android:textAlignment="textStart"
        android:paddingTop="10dp"
        android:id="@+id/textViewTelefonAzon" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail cím"
        android:id="@+id/textViewEmail" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Név"
        android:id="@+id/textViewNev" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jelszó"
        android:id="@+id/textViewJelszo" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Jelszó mégegyszer"
        android:id="@+id/textViewtextViewJelszomegint" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageViewKep"
        android:background="#f3e5e5"
        android:clickable="true"
        android:onClick="settings_Kepcsere"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_gravity="center_horizontal" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Kép csere"
        android:id="@+id/buttonKepCsere"
        android:onClick="settings_Kepcsere"
        android:layout_gravity="left" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:text="Mentés"
        android:onClick="OnClickSettingsMentes"
        android:clickable="false"
        android:focusable="false"
        />

</LinearLayout>
